rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // users collection â€“ owner can read/write their own doc
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth.uid == userId;
    }

    // simple role-based gate
    match /patients/{patientId} {
      function role() {
        return get(/databases/$(db)/documents/users/$(request.auth.uid)).data.role;
      }
      allow read, write: if role() == 'hospitalAdmin';
      allow read, write: if role() == 'medicalPersonnel'
                         && patientId in get(/databases/$(db)/documents/users/$(request.auth.uid)).data.assignedPatients;
      allow read: if role() == 'patient' && request.auth.uid == patientId;
    }
  }
}
